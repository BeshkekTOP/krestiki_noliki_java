<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/playerOneWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Победы X: 0"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/playerTwoWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Победы O: 0"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/drawsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ничьи: 0"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gameGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/button0"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button1"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button2"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button3"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button4"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button5"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button6"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button7"
            style="@style/GameButtonStyle" />

        <Button
            android:id="@+id/button8"
            style="@style/GameButtonStyle" />
    </GridLayout>
    <!-- Кнопка для смены темы -->
    <Button
        android:id="@+id/changeThemeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сменить тему"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сброс игры"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
